<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <%- include('partials/header') %>
        <style>
            .team-description {
                display: -webkit-box;
                -webkit-line-clamp: 3;
                /* number of lines */
                -webkit-box-orient: vertical;
                overflow: hidden;
                text-overflow: ellipsis;
                line-height: 1.5;
            }

            .team-grid {
                display: grid;
                grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
                gap: 30px;
            }

            .team-card {
                max-width: 360px;
                /* ðŸ‘ˆ keeps things human-sized */
                margin: 0 auto;
            }

            .team-img {
                width: 100%;
                height: 350px;
                /* ðŸ‘ˆ SMALLER */
                overflow: hidden;
                border-radius: 8px;
            }

            .team-img img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                object-position: 50% 20%;
                display: block;
            }
        </style>

</head>

<body>
    <%- include('partials/spinner') %>
        <%- include('partials/topbar') %>
            <%- include('partials/navbar') %>
                <!-- Page Header Start -->
                <div class="container-fluid page-header py-5 mb-5 wow fadeIn" data-wow-delay="0.1s">
                    <div class="container text-center py-5">
                        <h1 class="display-3 text-white mb-4 animated slideInDown">Our Team</h1>
                        <nav aria-label="breadcrumb animated slideInDown">
                            <ol class="breadcrumb justify-content-center mb-0">
                                <li class="breadcrumb-item"><a href="#">Home</a></li>
                                <li class="breadcrumb-item"><a href="#">Our Impact</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Our Team</li>
                            </ol>
                        </nav>
                    </div>
                </div>
                <!-- Page Header End -->
                <!-- Team Start -->
                <div class="container-xxl py-5">
                    <div class="container">
                        <div class="text-center mx-auto wow fadeInUp" data-wow-delay="0.1s" style="max-width: 500px;">
                            <p class="fs-5 fw-bold text-primary">Our Team</p>
                            <h1 class="display-5 mb-5">Dedicated & Experienced Team Members</h1>
                        </div>
                        <div class="row g-4">
                            <div class="team-grid">
                                <% team.forEach(member=> { %>

                                    <div class="team-card">
                                        <div class="team-img">
                                            <img src="<%= member.imageUrl %>" alt="<%= member.fullName %>">
                                        </div>

                                        <div class="team-text">
                                            <h4>
                                                <%= member.fullName %>
                                            </h4>

                                            <p class="team-role">
                                                <%= member.role.split(',').join(' â€¢ ') %>
                                             </p>

                                            <p class="team-description" data-full="<%- member.description %>">
                                             <%= member.description %>
                                            </p>

                                            <button
                                                type="button"
                                                class="read-more read-more-btn btn btn-link p-0"
                                                data-name="<%= member.fullName %>"
                                                data-role="<%= member.role %>"
                                                data-description="<%- member.description.replace(/\n/g, ' \\n') %>">
                                                    Read more
                                                    </button>


                                                    <div class="team-social">
                                                        <% if (member.facebook) { %>
                                                            <a href="<%= member.facebook %>"><i
                                                                    class="fab fa-facebook-f"></i></a>
                                                            <% } %>
                                                                <% if (member.twitter) { %>
                                                                    <a href="<%= member.twitter %>"><i
                                                                            class="fab fa-twitter"></i></a>
                                                                    <% } %>
                                                                        <% if (member.linkedin) { %>
                                                                            <a href="<%= member.linkedin %>"><i
                                                                                    class="fab fa-linkedin"></i></a>
                                                                            <% } %>
                                                    </div>
                                        </div>
                                    </div>

                                    <% }) %>
                            </div>
                        </div>
                    </div>
                </div>
                <%- include('partials/footer') %>
                    <!-- </> -->
                    <!-- </> -->
                    <!-- </> -->
                    <div class="modal fade" id="teamModal" tabindex="-1">
                        <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="teamModalTitle"></h5>
                                    <button type="button" class="close" data-dismiss="modal">
                                        &times;
                                    </button>
                                </div>

                                <div class="row">
                                    <div class="col-md-4 text-center">
                                        <img id="teamModalImage" class="img-fluid rounded mb-3">
                                    </div>
                                    <div class="col-md-8">
                                        <h6 id="teamModalRole" class="text-muted"></h6>
                                        <p id="teamModalDescription"></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <script>
                        function formatText(text) {
                            if (!text) return "";

                            const escaped = text
                                .replace(/&/g, "&amp;")
                                .replace(/</g, "&lt;")
                                .replace(/>/g, "&gt;");

                            return escaped
                                .split(/\n\s*\n/)
                                .map(p => `<p>${p.replace(/\n/g, "<br>")}</p>`)
                                .join("");
                        }

                        document.addEventListener("click", function (e) {
                            const btn = e.target.closest(".read-more-btn");
                            if (!btn) return;

                            document.getElementById("teamModalTitle").innerText = btn.dataset.name;
                            document.getElementById("teamModalImage").src = btn.closest(".team-card").querySelector(".team-img img").src;
                            document.getElementById("teamModalRole").innerText =
                                btn.dataset.role.split(",").join(" â€¢ ");

                            document.getElementById("teamModalDescription").innerHTML =
                                formatText(btn.dataset.description);

                            const modal = new bootstrap.Modal(
                                document.getElementById("teamModal")
                            );
                            modal.show();
                        });
                    </script>





</body>

</html>