<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <%- include('partials/header') %>
        <style>
            .team-description {
                display: -webkit-box;
                -webkit-line-clamp: 3;
                /* number of lines */
                -webkit-box-orient: vertical;
                overflow: hidden;
                text-overflow: ellipsis;
                line-height: 1.5;
            }

            .team-grid {
                display: grid;
                grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
                gap: 30px;
            }

            .team-img {
                width: 100%;
                height: 240px;
                overflow: hidden;
            }
            .team-img img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                object-position: top center;
                /* ðŸ”¥ FACE SAVER */
            }
        </style>

</head>

<body>
    <%- include('partials/spinner') %>
        <%- include('partials/topbar') %>
            <%- include('partials/navbar') %>
                <!-- Page Header Start -->
                <div class="container-fluid page-header py-5 mb-5 wow fadeIn" data-wow-delay="0.1s">
                    <div class="container text-center py-5">
                        <h1 class="display-3 text-white mb-4 animated slideInDown">Our Team</h1>
                        <nav aria-label="breadcrumb animated slideInDown">
                            <ol class="breadcrumb justify-content-center mb-0">
                                <li class="breadcrumb-item"><a href="#">Home</a></li>
                                <li class="breadcrumb-item"><a href="#">Our Impact</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Our Team</li>
                            </ol>
                        </nav>
                    </div>
                </div>
                <!-- Page Header End -->
                <!-- Team Start -->
                <div class="container-xxl py-5">
                    <div class="container">
                        <div class="text-center mx-auto wow fadeInUp" data-wow-delay="0.1s" style="max-width: 500px;">
                            <p class="fs-5 fw-bold text-primary">Our Team</p>
                            <h1 class="display-5 mb-5">Dedicated & Experienced Team Members</h1>
                        </div>
                        <div class="row g-4">
                            <div class="team-grid">
                                <% team.forEach(member=> { %>

                                    <div class="team-card">
                                        <div class="team-img">
                                            <img src="<%= member.imageUrl %>" alt="<%= member.fullName %>">
                                        </div>

                                        <div class="team-text">
                                            <h4>
                                                <%= member.fullName %>
                                            </h4>

                                            <p class="team-role">
                                                <%= member.role.split(',').join(' â€¢ ') %>
                                             </p>

                                            <p class="team-description">
                                                <%= member.description %>
                                            </p>
                                            <div class="team-social">
                                                <% if (member.facebook) { %>
                                                    <a href="<%= member.facebook %>"><i class="fab fa-facebook-f"></i></a>
                                                <% } %>
                                                <% if (member.twitter) { %>
                                                    <a href="<%= member.twitter %>"><i class="fab fa-twitter"></i></a>
                                                <% } %>
                                                <% if (member.linkedin) { %>
                                                    <a href="<%= member.linkedin %>"><i class="fab fa-linkedin"></i></a>
                                                <% } %>
                                            </div>
                                        </div>
                                    </div>

                                <% }) %>
                            </div>
                        </div>
                    </div>
                </div>
                <%- include(' partials/footer') %>
                                                    <!-- </> -->
                                                    <!-- </> -->
                                                    <!-- </> -->
</body>

</html>