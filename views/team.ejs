<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <%- include('partials/header') %>

</head>

<body>
    <%- include('partials/spinner') %>
        <%- include('partials/topbar') %>
            <%- include('partials/navbar') %>
                <!-- Page Header Start -->
                <div class="container-fluid page-header py-5 mb-5 wow fadeIn" data-wow-delay="0.1s">
                    <div class="container text-center py-5">
                        <h1 class="display-3 text-white mb-4 animated slideInDown">Our Team</h1>
                        <nav aria-label="breadcrumb animated slideInDown">
                            <ol class="breadcrumb justify-content-center mb-0">
                                <li class="breadcrumb-item"><a href="#">Home</a></li>
                                <li class="breadcrumb-item"><a href="#">Our Impact</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Our Team</li>
                            </ol>
                        </nav>
                    </div>
                </div>
                <!-- Page Header End -->


                <!-- Team Start -->
                <div class="container-xxl py-5">
                    <div class="container">
                        <div class="text-center mx-auto wow fadeInUp" data-wow-delay="0.1s" style="max-width: 500px;">
                            <p class="fs-5 fw-bold text-primary">Our Team</p>
                            <h1 class="display-5 mb-5">Dedicated & Experienced Team Members</h1>
                        </div>
                        <div class="row g-4">
                            <% team.forEach(member=> { %>
                                <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                                    <div class="team-item rounded">
                                        <img class="img-fluid" src="<%= member.imageUrl || 'img/default-team.jpg' %>"
                                            alt="">
                                        <div class="team-text">
                                            <h4 class="mb-0">
                                                <%= member.fullName %>
                                            </h4>
                                            <p class="text-primary">
                                                <%= member.role %>
                                            </p>
                                            <div class="team-social d-flex">

                                                <% if (member.facebook) { %>
                                                    <a class="btn btn-square rounded-circle me-2"
                                                        href="<%= member.facebook %>">
                                                        <i class="fab fa-facebook-f"></i></a>
                                                    <% } %>

                                                        <% if (member.twitter) { %>
                                                            <a class="btn btn-square rounded-circle me-2"
                                                                href="<%= member.twitter %>">
                                                                <i class="fab fa-twitter"></i></a>
                                                            <% } %>

                                                                <% if (member.linkedin) { %>
                                                                    <a class="btn btn-square rounded-circle me-2"
                                                                        href="<%= member.linkedin %>">
                                                                        <i class="fab fa-linkedin"></i></a>
                                                                    <% } %>

                                                                        <% if (member.googlePlus) { %>
                                                                            <a class="btn btn-square rounded-circle me-2"
                                                                                href="<%= member.googlePlus %>">
                                                                                <i class="fab fa-google-plus-g"></i></a>
                                                                            <% } %>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <% }) %>
                        </div>

                    </div>
                </div>
                <!-- Team End -->

                <%- include('partials/footer') %>
</body>

</html>